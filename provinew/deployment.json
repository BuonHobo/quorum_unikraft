{
    "quorum": {
        "consensus": {
            "name": "raft"
        },
        "contract":{
            "path": "contracts/IDS.sol"
        },
        "directory": "./deployment",
        "toolboxContainer": "ubuntu-toolbox-24.10",
        "virtualizers": [
            {
                "name": "podman",
                "image": "docker.io/quorumengineering/quorum"
            },
            {
                "name": "host"
            },
            {
                "name": "unitest",
                "image": "buonhobo/geth",
                "memory": "1Gi"
            },
            {
                "name": "qemu",
                "qcow2": "build/bootc/qcow2/disk.qcow2",
                "user": "quorum",
                "key": "build/bootc/key",
                "memory": "1G",
                "cpus": 1
            }
        ],
        "nodes": [
            {
                "name": "node1",
                "role": "validator",
                "verbosity": 0,
                "virtualizer": {
                    "name": "unitest"
                }
            },
            {
                "name": "node2",
                "role": "validator",
                "verbosity": 0,
                "virtualizer": {
                    "name": "unitest"
                }
            },
            {
                "name": "member1",
                "role": "validator",
                "verbosity": 0,
                "virtualizer": {
                    "name": "qemu"
                }
            },
            {
                "name": "node3",
                "role": "validator",
                "verbosity": 0,
                "virtualizer": {
                    "name": "unitest"
                }
            }
        ]
    }
}